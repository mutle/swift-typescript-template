#!/bin/bash
set -e

[ -n "$CLEAN" ] && swift build --clean
swift build 2>&1 | while read -r line; do
  if echo "$line" | grep -q "error: "; then
    failed=1
    echo -e "\033[31m$line\033[0m"
    continue
  fi
  if echo "$line" | grep -q "warning: "; then
    echo -e "\033[1;37m$line\033[0m"
    continue
  fi
  echo "$line"
done

exit 0
